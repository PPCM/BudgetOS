{
  "name": "budgetos",
  "version": "1.0.0",
  "description": "Application Web de gestion financiÃ¨re personnelle",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "db:migrate": "node src/database/migrate.js",
    "db:migrate:rollback": "npx knex migrate:rollback --knexfile knexfile.js",
    "db:seed": "node src/database/seed.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run --config vitest.integration.config.js",
    "test:all": "vitest run && vitest run --config vitest.integration.config.js",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:sqlite": "E2E_DB_TYPE=sqlite npx playwright test",
    "test:e2e:postgres": "E2E_DB_TYPE=postgres npx playwright test",
    "test:e2e:mysql": "E2E_DB_TYPE=mysql npx playwright test",
    "test:e2e:all-dbs": "npm run test:e2e:sqlite && npm run test:e2e:postgres && npm run test:e2e:mysql",
    "test:full": "npm run test:all && npm run test:e2e",
    "test:sqlite": "TEST_DB_CLIENT=better-sqlite3 vitest",
    "test:mysql": "TEST_DB_CLIENT=mysql2 vitest",
    "test:postgres": "TEST_DB_CLIENT=pg vitest",
    "test:all-dbs": "npm run test:sqlite && npm run test:mysql && npm run test:postgres",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.2",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "knex": "^3.1.0",
    "multer": "^2.0.0",
    "mysql2": "^3.16.2",
    "node-cron": "^4.2.1",
    "pg": "^8.17.2",
    "sanitize-html": "^2.11.0",
    "session-file-store": "^1.5.0",
    "sharp": "^0.34.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "budget",
    "finance",
    "personal-finance",
    "accounting",
    "money-management"
  ],
  "author": "",
  "license": "MIT"
}
